    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".features.drawer.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <idCategory android:name="android.intent.idCategory.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".features.settings.SettingsActivity"/>
        <activity android:name=".features.transactionform.TransactionFormActivity"/>
        <activity android:name=".features.categoryform.CategoryFormActivity"/>
        <activity android:name=".features.detailmonth.DetailMonthActivity"/>

    </application>

</manifest>